@{
    ViewData["Title"] = "Test Results";
}

<div id="Container">
    
    <div id="First">
        
        <img src="/images/exam-results.jpg" class="img-fluid rounded-start rounded-end" alt="Image description">


    </div>

    <div id="Second">
        
        <div id="ResultsCard">

            <div style="font-family:'Fira Code VF';font-weight:520" class="mt-3 text-center">
                <span class="english">Congratulations! You passed</span>
                <span class="swahili">Hongera! Umefaulu</span>
            </div>

            <div class="d-flex justify-content-center">
                <img src="/Images/clipboard.gif" width="70%" />
            </div>

            <button class="mt-3 mb-3">
                <i style="font-size: 17px" class="bi bi-file-earmark-arrow-down"></i>
                <div>
                    <span class="english">Certificate</span>
                    <span class="swahili">Cheti</span>
                </div>
            </button>

        </div>

    </div>

</div>