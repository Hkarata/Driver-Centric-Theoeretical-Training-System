@{
    ViewData["Title"] = "Sessions";
}

@model CreateSession

<div id="TheContainer">

    <div id="TheHolder">
        
        <p>Create a session for Julius Nyerere International Conference Centre</p>

        <form>

            <div class="form-group mb-3">
                <label asp-for="Date"></label>
                <input type="date" asp-for="Date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="StartTime"></label>
                <input type="time" asp-for="StartTime" class="form-control" />
                <span asp-validation-for="StartTime" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="EndTime"></label>
                <input type="time" asp-for="EndTime" value="@Model.StartTime.AddMinutes(45)" class="form-control" readonly/>
                <span asp-validation-for="EndTime" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary w-100">Create session</button>


        </form>

    </div>

</div>